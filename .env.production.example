# Database Configuration
# For production, use a cloud database like Vercel Postgres, Neon, or Supabase
DATABASE_URL=postgres://user:password@host:port/database

# Anthropic API Key (required for AI coach)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Weather API (optional but recommended)
OPENWEATHERMAP_API_KEY=your_api_key_here

# Strava Integration (optional)
NEXT_PUBLIC_STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# App Configuration
NEXT_PUBLIC_APP_URL=https://stride-os.vercel.app

# Security
AUTH_SECRET=generate_a_random_string_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_here
USER_USERNAME=user
USER_PASSWORD=user_password_here
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=viewer_password_here
COACH_USERNAME=coach
COACH_PASSWORD=coach_password_here

# Access mode switch:
# - private: normal production mode (auth gate enabled)
# - public: sharing mode (bypass gate, force one profile, disable coach API chat)
APP_ACCESS_MODE=private
PUBLIC_PROFILE_ID=1

# Legacy guest-mode flags (still supported for backward compatibility)
ENABLE_GUEST_FULL_ACCESS=false
GUEST_PROFILE_ID=1
