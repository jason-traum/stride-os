# Anthropic API Key for the AI Coach
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# Strava OAuth
NEXT_PUBLIC_STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_WEBHOOK_VERIFY_TOKEN=your_strava_webhook_verify_token

# Auth roles
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_here
USER_USERNAME=user
USER_PASSWORD=user_password_here
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=viewer_password_here
# Optional coach read-only account
COACH_USERNAME=coach
COACH_PASSWORD=coach_password_here

# Access mode switch:
# - private: normal production mode (auth gate enabled)
# - public: sharing mode (bypass gate, force one profile, disable coach API chat)
APP_ACCESS_MODE=private
PUBLIC_PROFILE_ID=1

# Legacy guest-mode flags (still supported for backward compatibility)
ENABLE_GUEST_FULL_ACCESS=false
GUEST_PROFILE_ID=1

# Database Configuration (for Vercel deployment)
# The app uses SQLite locally, but needs Postgres for Vercel
# Options: Vercel Postgres, Neon, Supabase, or any Postgres provider
# DATABASE_URL=postgres://user:password@host:5432/database

# Optional: Base URL for the app (set automatically by Vercel)
# NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app
